[module/redshift]
type = custom/script
;format-prefix = "ïƒ« "
format-prefix = "ï‹‡ "
format-underline = ${colors.primary}
format-prefix-padding-left = ${constants.padding}
label-padding-right = ${constants.padding}
format-margin = ${constants.margin}

exec = source ~/.config/polybar/scripts/redshift/env.sh && ~/.config/polybar/scripts/redshift/redshift.sh temperature
click-left = source ~/.config/polybar/scripts/redshift/env.sh && ~/.config/polybar/scripts/redshift/redshift.sh toggle
scroll-up = source ~/.config/polybar/scripts/redshift/env.sh && ~/.config/polybar/scripts/redshift/redshift.sh increase
scroll-down = source ~/.config/polybar/scripts/redshift/env.sh && ~/.config/polybar/scripts/redshift/redshift.sh decrease
interval=0.5

[module/mem]
type = custom/script
tail = true
interval = 2

format-underline = ${colors.primary}
format-prefix = "RAM: "
format-prefix-padding-left = ${constants.padding}
format-margin = ${constants.margin}

label-padding-right = ${constants.padding}
label-foreground = ${colors.foreground}

exec = free --mega | grep Mem | awk '{printf "%02.0f%\n", $3/$2 * 100}'

[module/gpu]
type = custom/script
tail = true
interval = 2

format-underline = ${colors.primary}
format-prefix = "GPU: "
format-prefix-padding-left = ${constants.padding}
format-margin = ${constants.margin}

label-padding-right = ${constants.padding}
label-foreground = ${colors.foreground}

exec = nvidia-smi --query-gpu=utilization.gpu --format=csv | tail -1 | awk -F: '{printf "%02i%\n", $1}'

[module/pulseaudio-control]
type = custom/script
tail = true
format-underline = ${colors.primary}
label-padding = ${constants.padding}
label-foreground = ${colors.foreground}
format-margin = ${constants.margin}

# Icons mixed from Font Awesome 5 and Material Icons
# You can copy-paste your options for each possible action, which is more
# trouble-free but repetitive, or apply only the relevant ones (for example
# --sink-blacklist is only needed for next-sink).
exec = pulseaudio-control --icons-volume "ï€§ ,ï€¨ " --icon-muted "ï€¦ " --sink-nickname "alsa_output.pci-0000_00_1f.3.analog-stereo:îŒ Headphones" --sink-nickname "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2:îŒ­ Speakers" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control --sink-blacklist PulseEffects_apps,PulseEffects_mic next-sink
scroll-up = pulseaudio-control --volume-max 200 up
scroll-down = pulseaudio-control --volume-max 200 down

[module/brightness]
type = custom/script
tail = true
format-prefix = "ï†… "
format-underline = ${colors.primary}
format-padding = ${constants.padding}
label-foreground = ${colors.foreground}
format-margin = ${constants.margin}

exec = ddcutil getvcp 10 2> /dev/null | grep value | sed 's/, max.*/%/g;s/.*value = *//g'
interval = 1
scroll-up = ddcutil setvcp 10 + 5
scroll-down = ddcutil setvcp 10 - 5
click-left = echo "bla"

[module/xkeyboardbutbetter]
type = custom/script
;tail = true
interval = 0.5
format-prefix = "î¢” "
format-prefix-padding-left = ${constants.padding}
format-underline = ${colors.primary}
format-margin = ${constants.margin}

label-padding-right = ${constants.padding}
label-foreground = ${colors.foreground}

exec = setxkbmap -print -verbose 10 | grep -oP '(?<=layout:     ).*'
click-left = exec $HOME/.config/polybar/scripts/toggleKeymap.sh

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
format-margin-right = ${constants.margin}

index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = ${constants.padding}
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = ${constants.padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${constants.padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${constants.padding}

; Separator in between workspaces
; label-separator = |

