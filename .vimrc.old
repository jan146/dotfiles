set nocompatible
filetype off
set encoding=utf-8

filetype indent plugin on
syntax on

set hidden
set wildmenu
set showcmd

set hlsearch
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline

set ruler
set laststatus=2
set confirm
set cmdheight=2
set number

set notimeout ttimeout ttimeoutlen=200

let g:netrw_dirhistmax = 0

set shiftwidth=4
set softtabstop=4
set expandtab

nnoremap <C-L> :nohl<CR><C-L>
