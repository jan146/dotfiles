echo -n "Enter a valid filename: "
read FILE
[ ! -f "$FILE" ] && echo "The file specified doesn't exist" && exit 1

USER=admin
echo -n "Enter server username (default is '$USER'): "
read TEMP
if [ ! -z "$TEMP" ]; then
	USER=TEMP
fi

echo -n "Enter server password: "
read -s PASS
echo ""

HOST=orangepi
echo -n "Enter the server's ip or hostname (default is '$HOST'): "
read TEMP
if [ ! -z "$TEMP" ]; then
	HOST=TEMP
fi

PORT=2080
echo -n "Enter server port (default is '$PORT'): "
read TEMP
if [ ! -z "$TEMP" ]; then
	PORT=TEMP
fi

echo -n "Enter destination path (default is the root folder): "
read FOLDER

curl -T $FILE -u "$USER:$PASS" "http://$HOST:$PORT/remote.php/dav/files/$USER/$FOLDER$FILE"
echo "curl -T $FILE -u '$USER:$PASS' 'http://$HOST:$PORT/remote.php/dav/files/$USER/$FOLDER$FILE'"

